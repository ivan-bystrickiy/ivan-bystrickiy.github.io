-
  var menu = [
    { name: "Home", link: "/index.html"},
    { name: "Обо мне", link: "/about.html"},
    { name: "Портфолио", link: "/portfolio.html"},
    { name: "Блог", link: "/blog.html"},
  ]

header.header
  a.nav__open(href="#menu")
    img(src="img/menu-open.svg", alt="") 
  nav.nav#menu
    a(href="#close").nav__close
      img(src="img/menu-close.svg", alt="")
    ul
      each item in menu

        if item.link == currentPageLink
          - var isActive = 'active'
        else
          - var isActive = ''

        li
          a(href=item.link, class=isActive)=item.name