extends ../templates/main

block variables
  - var currentPageLink = '/portfolio.html'
  - var title = 'Портфолио - Иван Быстрицкий'
  - var descr = 'Мои работы и проекты, которые я завершил и готов показать.'

block content

  -
    var works = [
      {
        title: 'FOOD POS - React приложение с собственной UI библиотекой',
        publish: '25 Августа, 2021',
        slug: 'food-pos-work',
        screenshot: 'food_pos.png',
      }
    ]

  .container
    each work in works
      article.article
        img.img-fluid(src="/img/screenshots/" + work.screenshot)
        .article__data
          p.article__text= work.title
          span.article__date= work.publish
        a.article__link(href="/portfolio/" + work.slug + ".html")
          span.hidden Читать далее

block scripts